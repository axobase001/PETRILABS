# PETRILABS Orchestrator Configuration

# Server
PORT=3000
NODE_ENV=development
LOG_LEVEL=info
LOG_FILE=./logs/orchestrator.log

# Blockchain (Base L2 Mainnet)
RPC_URL=https://mainnet.base.org
CHAIN_ID=8453

# Contract Addresses
FACTORY_ADDRESS=0x...
GENOME_REGISTRY_ADDRESS=0x...

# Redis (optional - falls back to in-memory)
REDIS_URL=redis://localhost:6379

# Akash Configuration (optional - enables Akash deployment monitoring)
AKASH_RPC=https://rpc.akashnet.net
AKASH_REST=https://api.akashnet.net
AKASH_CHAIN_ID=akashnet-2
AKASH_MNEMONIC=your mnemonic here
# or use private key
AKASH_PRIVATE_KEY=0x...

# Akash Monitoring
AKASH_CHECK_ENABLED=true
AUTO_RESTART_ENABLED=false

# Monitor Configuration
CHECK_INTERVAL_MS=60000
WARNING_THRESHOLD_HOURS=24
CRITICAL_THRESHOLD_HOURS=6

# CORS
CORS_ORIGIN=http://localhost:3000

# Security
JWT_SECRET=your-secret-key
API_KEY=your-api-key
