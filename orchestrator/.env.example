# Server
PORT=3000
NODE_ENV=development

# Redis (for BullMQ job queue)
REDIS_URL=redis://localhost:6379

# Blockchain (Base Sepolia)
RPC_URL=https://sepolia.base.org
PRIVATE_KEY=your_private_key_here

# Contract Addresses (from contract deployment)
GENOME_REGISTRY_ADDRESS=0x...
PETRI_FACTORY_V2_ADDRESS=0x...
USDC_ADDRESS=0x...

# LLM (OpenRouter or OpenAI)
LLM_PROVIDER=openrouter
LLM_API_KEY=your_api_key_here
LLM_MODEL=anthropic/claude-3-opus-20240229

# Arweave
ARWEAVE_KEY_FILE=arweave-key.json
ARWEAVE_GATEWAY=https://arweave.net

# Akash Network
AKASH_MNEMONIC=your_akash_mnemonic
AKASH_RPC=https://rpc.akashnet.net:443

# Service Config
MAX_MEMORY_FILE_SIZE=10485760
DEFAULT_AGENT_DEPOSIT_USDC=100
PLATFORM_FEE_USDC=5
HEARTBEAT_INTERVAL_MS=21600000

# Logging
LOG_LEVEL=info
