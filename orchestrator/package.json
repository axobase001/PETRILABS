{
  "name": "@petrilabs/orchestrator",
  "version": "1.0.0",
  "description": "PETRILABS Orchestrator Service - Genome Generation & Deployment",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "jest --config src/__tests__/jest.config.js",
    "test:watch": "jest --config src/__tests__/jest.config.js --watch",
    "test:coverage": "jest --config src/__tests__/jest.config.js --coverage",
    "test:integration": "jest --config src/__tests__/jest.config.js integration",
    "test:e2e": "jest --config src/__tests__/jest.config.js e2e",
    "docker:build": "docker build -t petrilabs-orchestrator:latest -f docker/Dockerfile .",
    "docker:up": "docker-compose -f docker/docker-compose.yml up -d",
    "docker:down": "docker-compose -f docker/docker-compose.yml down",
    "deploy:staging": "./scripts/deploy-vps.sh staging",
    "deploy:production": "./scripts/deploy-vps.sh production",
    "verify": "./scripts/verify-deployment.sh",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.3.1",
    "ethers": "^6.9.0",
    "axios": "^1.6.2",
    "bullmq": "^5.0.0",
    "ioredis": "^5.3.2",
    "arweave": "^1.14.4",
    "long": "^5.2.3",
    "@akashnetwork/akashjs": "^0.8.0",
    "@cosmjs/stargate": "^0.32.0",
    "@cosmjs/proto-signing": "^0.32.0",
    "@cosmjs/crypto": "^0.32.0",
    "openai": "^4.20.0",
    "zod": "^3.22.4",
    "winston": "^3.11.0",
    "express-rate-limit": "^7.1.5",
    "multer": "^1.4.5-lts.1",
    "uuid": "^9.0.0",
    "async-mutex": "^0.4.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/multer": "^1.4.11",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "@types/long": "^5.2.0",
    "supertest": "^6.3.3",
    "@types/supertest": "^6.0.2",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.10",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2",
    "prettier": "^3.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "ai-agent",
    "genome",
    "akash",
    "arweave",
    "blockchain"
  ],
  "author": "PETRILABS",
  "license": "MIT"
}
