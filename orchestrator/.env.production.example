# PETRILABS Orchestrator - Production Environment
# Copy to .env.production and fill in values

# ==========================================
# Server Configuration
# ==========================================
PORT=3000
NODE_ENV=production
LOG_LEVEL=info
LOG_FILE=/app/logs/orchestrator.log

# ==========================================
# Blockchain (Base Mainnet)
# ==========================================
RPC_URL=https://mainnet.base.org
CHAIN_ID=8453

# Contract Addresses (Base Mainnet)
FACTORY_ADDRESS=
GENOME_REGISTRY_ADDRESS=
EPIGENETICS_ADDRESS=
REPLICATION_MANAGER_ADDRESS=
AGENT_BANK_ADDRESS=
TOMBSTONE_ADDRESS=

# ==========================================
# Redis (Required for production)
# ==========================================
REDIS_URL=redis://redis:6379

# ==========================================
# Akash Configuration
# ==========================================
AKASH_RPC=https://rpc.akashnet.net
AKASH_REST=https://api.akashnet.net
AKASH_CHAIN_ID=akashnet-2
# Use either MNEMONIC or PRIVATE_KEY (not both)
AKASH_MNEMONIC=
# AKASH_PRIVATE_KEY=

# Akash Monitoring
AKASH_CHECK_ENABLED=true
AUTO_RESTART_ENABLED=false

# ==========================================
# Arweave Configuration
# ==========================================
# Arweave wallet JWK JSON (keep secure!)
ARWEAVE_KEY=
ARWEAVE_HOST=arweave.net
ARWEAVE_PORT=443
ARWEAVE_PROTOCOL=https

# ==========================================
# Monitor Configuration
# ==========================================
CHECK_INTERVAL_MS=60000
WARNING_THRESHOLD_HOURS=24
CRITICAL_THRESHOLD_HOURS=6

# ==========================================
# Security
# ==========================================
# CORS origin (set to your frontend domain)
CORS_ORIGIN=https://petrilabs.io

# JWT secret for authentication
JWT_SECRET=

# API key for admin endpoints
API_KEY=

# ==========================================
# Optional: Monitoring & Alerts
# ==========================================
# Sentry DSN for error tracking
# SENTRY_DSN=

# Discord webhook for alerts
# DISCORD_WEBHOOK_URL=

# Slack webhook for alerts
# SLACK_WEBHOOK_URL=
